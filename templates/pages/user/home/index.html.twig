{% extends 'themes/base_user.html.twig' %}

{% block title %}Tableau de bord{% endblock %}

{% block description %}Tableau de bord{% endblock %}

{% block keywords %}Tableau-de-bord{% endblock %}

{% block main %}

    <h1 class="text-center my-3 display-5">Espace Utilisateur<hr></h1>
   
    <p class="text-center fs-4" id="greeting">Bonjour {{ app.user.firstName }} · Vos commandes Récentes!</p>

    <div class="container my-5">
        <div class="row">
            {% if app.user.orders is not empty %}
                {% for order in app.user.orders %}
                    <div class="col-md-6 col-lg-4 my-3">
                        <div class="bg-light text-dark rounded-5 d-flex flex-column justify-content-center align-items-center">
                            <p style="color: #C59B76; padding: 5px"><strong>Commande #{{ order.id }}</strong></p>
                            <p><strong>Status de la commande :</strong> {{ order.status }}</p>
                            <p><strong>Commandé le :</strong> {{ order.orderedAt|format_datetime() }}</p>
                            <p><strong>A recupérer le :</strong> {{order.pickupDate|format_date()}} à {{order.pickupTime|format_time()}}
                        </div>
                    </div>
                {% endfor %}
            {% else %}
                <p class="text-center">Vous n'avez pas de commandes récentes.</p>
                <div class="d-flex justify-content-center align-items-center mx-auto">
                    <a href="{{path('visitor_catalog_index')}}" class="btn btn shadow" style="background-color: #C59B76">Commandez votre bonheur</a>
                </div>
            {% endif %}
        </div>
    </div>

{% endblock %}
