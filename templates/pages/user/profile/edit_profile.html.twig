{% extends 'themes/base_user.html.twig' %}

{% block title %}Modifier mon Profil{% endblock %}

{% block description %}Modifier mon Profil{% endblock %}

{% block keywords %}Admin, modifier, profile{% endblock %}

{% block main %}
    <h1 class="text-center my-3 display-5">Modifier mon Profil<hr></h1>

    {% include 'components/_alert.html.twig' %}

    <div class="container my-5">
        <div class="row">
            <div class="col-md-8 col-lg-4 mx-auto">
                {{form_start(form)}}
                    <div class="mb-3">
                        <label for="edit_profil_form_firstName">Pr√©nom</label>
                        <div class="text-danger">{{form_errors(form.firstName)}}</div>
                        {{form_widget(form.firstName, {'attr': {'class':'form-control', 'autofocus':'autofocus'}})}}
                    </div>
                    <div class="mb-3">
                        <label for="edit_profil_form_lastName">Nom</label>
                        <div class="text-danger">{{form_errors(form.lastName)}}</div>
                        {{form_widget(form.lastName, {'attr': {'class':'form-control'}})}}
                    </div>
                    <div class="mb-3">
                        <label for="edit_profil_form_email">Email</label>
                         <div class="text-danger">{{form_errors(form.email)}}</div>
                        {{form_widget(form.email, {'attr': {'class':'form-control'}})}}
                    </div>
                    <div class="mb-3">
                        <input formnovalidate type="submit" class="w-100 btn btn-dark" value="Modifier Profil">
                    </div>
                {{form_end(form)}}
            </div>
        </div>
    </div>
    

{% endblock %}

