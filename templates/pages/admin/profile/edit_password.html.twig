{% extends 'themes/base_admin.html.twig' %}

{% block title %}Modifier mon mot de passe{% endblock %}

{% block description %}Modifier mon mot de passe{% endblock %}

{% block keywords %}Admin, modifier, mot-de-passe{% endblock %}

{% block main %}
    <h1 class="text-center my-3 display-5">Modifier mon mot de passe<hr></h1>

    <div class="container my-5">
        <div class="row">
            <div class="col-md-8 col-lg-4 mx-auto">
            
                {% include 'components/_alert.html.twig' %}

                {{form_start(form)}}
                    <div class="mb-3">
                        <label for="edit_password_form_currentPassword">Mot de passe<span class="text-danger">*</span></label>
                        <div class="text-danger">{{form_errors(form.currentPassword)}}</div>
                        {{form_widget(form.currentPassword, {'attr': {'class':'form-control', 'placeholder':'Au moins 12 caractères'}})}}
                        <small><em>Le mot de passe doit contenir au moins 12 caractères, une lettre majuscule, minuscule, un chiffre et un caractère spécial.</em></small>
                    </div>
                    <div class="mb-3">
                        <label for="edit_password_form_password_first">Confirmation de mot de passe<span class="text-danger">*</span></label>
                        <div class="text-danger">{{form_errors(form.password.first)}}</div>
                        {{form_widget(form.password.first, {'attr': {'class':'form-control'}})}}
                    </div>
                    <div class="mb-3">
                        <label for="edit_password_form_password_second">Confirmation de mot de passe<span class="text-danger">*</span></label>
                        <div class="text-danger">{{form_errors(form.password.second)}}</div>
                        {{form_widget(form.password.second, {'attr': {'class':'form-control'}})}}
                    </div>
                    <div class="mb-3">
                        <input formnovalidate type="submit" class="w-100 btn btn-dark" value="Modifier mon mot de passe">
                    </div>
                {{form_end(form)}}
            </div>
        </div>
    </div>
    

{% endblock %}

