{% extends 'themes/base_admin.html.twig' %}

{% block title %}Modification des paramètres{% endblock %}

{% block description %}Modification desparamètres{% endblock %}

{% block keywords %}Admin, paramètres{% endblock %}

{% block main %}
    <h1 class="text-center my-3 display-5">Modification des Paramètres<hr></h1>

    <div class="container my-5">
        <div class="row">
            <div class="col-md-8 col-lg-6 mx-auto shadow">

                {% include 'components/_alert.html.twig' %}

                {{form_start(form)}}
                    <div class="mb-3">
                        <label for="settings_form_websiteName">Nome<span class="text-danger">*</span></label>
                        <div class="text-danger">{{form_errors(form.websiteName)}}</div>
                        {{form_widget(form.websiteName, {'attr': {'class':'form-control', 'autofocus':'autofocus'}})}}
                       
                    </div>
                    <div class="mb-3">
                        <label for="settings_form_websiteUrl">Url<span class="text-danger">*</span></label>
                        <div class="text-danger">{{form_errors(form.websiteUrl)}}</div>
                        {{form_widget(form.websiteUrl, {'attr': {'class':'form-control'}})}}
                 
                    </div>
                    <div class="mb-3">
                        <label for="settings_form_description">Description<span class="text-danger">*</span></label>
                        <div class="text-danger">{{form_errors(form.description)}}</div>
                        {{form_widget(form.description, {'attr': {'class':'form-control', 'autofocus':'autofocus'}})}}
                    </div>
                    <div class="mb-3">
                        <label for="settings_form_email">Email<span class="text-danger">*</span></label>
                        <div class="text-danger">{{form_errors(form.email)}}</div>
                        {{form_widget(form.email, {'attr': {'class':'form-control'}})}}
                    </div>
                    <div class="mb-3">
                        <label for="settings_form_phone">Numérode téléphone<span class="text-danger">*</span></label>
                        <div class="text-danger">{{form_errors(form.phone)}}</div>
                        {{form_widget(form.phone, {'attr': {'class':'form-control', 'autofocus':'autofocus'}})}}
                    <div class="mb-3">
                        <label for="settings_form_adresse">Adresse<span class="text-danger">*</span></label>
                        <div class="text-danger">{{form_errors(form.adresse)}}</div>
                        {{form_widget(form.adresse, {'attr': {'class':'form-control', 'autofocus':'autofocus'}})}}
                    </div>
                    <div class="mb-3">
                        <label for="settings_form_city">Ville<span class="text-danger">*</span></label>
                        <div class="text-danger">{{form_errors(form.city)}}</div>
                        {{form_widget(form.city, {'attr': {'class':'form-control', 'autofocus':'autofocus'}})}}
                    </div>
                    <div class="mb-3">
                        <label for="settings_form_country">Pays<span class="text-danger">*</span></label>
                        <div class="text-danger">{{form_errors(form.country)}}</div>
                        {{form_widget(form.country, {'attr': {'class':'form-control', 'autofocus':'autofocus'}})}}
                    </div>
                    <div class="mb-3">
                        <label for="settings_form_postalCode">Code Postal<span class="text-danger">*</span></label>
                        <div class="text-danger">{{form_errors(form.postalCode)}}</div>
                        {{form_widget(form.postalCode, {'attr': {'class':'form-control', 'autofocus':'autofocus'}})}}
                    </div>
                    <div class="mb-3">
                        <input formnovalidate type="submit" class="w-100 btn btn-dark" value="Modifier mon mot de passe">
                    </div>
                {{form_end(form)}}
                
            </div>
        </div>
    </div>

{% endblock %}


