{% extends 'themes/base_admin.html.twig' %}

{% block title %}Paramètres du site{% endblock %}

{% block description %}Paramètres du site{% endblock %}

{% block keywords %}Admin, paramètres{% endblock %}

{% block main %}
    <h1 class="text-center my-3 display-5">Paramètres du site<hr></h1>

    <div class="container my-5">
        <div class="row">
            <div class="col-md-8 col-lg-6 mx-auto shadow">
                <div class="card border-0">
                    <p><strong>Nom du Site :</strong> {{settings.websiteName}}</p>
                    <p><strong>Url du Site :</strong> {{settings.websiteUrl}}</p>
                    <p><strong>Description :</strong> {{settings.description}}</p>
                    <p><strong>Email :</strong> {{settings.email}}</p>
                    <p><strong>Numéro de téléphone :</strong> {{settings.phone}}</p>
                    <p><strong>Adresse :</strong> {{settings.adresse}}</p>
                    <p><strong>Ville :</strong> {{settings.city}}</p>
                    <p><strong>Pays :</strong> {{settings.country}}</p>
                    <p><strong>Code Postal :</strong> {{settings.postalCode}}</p>
                    <p class="d-flex justify-content-center align-items-center my-3">
                        <a href="{{path('admin_settings_edit', {'id': settings.id})}}" class="btn btn-dark w-50">Modifier les paramètres</a>
                    </p>
                </div>
            </div>
        </div>
    </div>

{% endblock %}


