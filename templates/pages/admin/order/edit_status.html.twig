{% extends 'themes/base_admin.html.twig' %}

{% block title %}Modifier le statut de cette commande{% endblock %}

{% block description %}Modifier le statut de cette commande{% endblock %}

{% block keywords %}Admin, modifier, satut, commande{% endblock %}

{% block main %}
    <h1 class="text-center my-3 display-5">Modifier le statut de cette commande<hr></h1>

    <div class="container mt-5">
        <div class="row">
            <div class="col-md-4 mx-auto">
                {{form_start(form)}}
                    <div class="mb-3">
                        <div class="text-danger">{{form_errors(form.status)}}</div>
                        {{form_widget(form.status, {'attr':{'class':'form-control', 'autofocus':'autofocus'}})}}
                    </div>
                    <div class="mb-3">
                        <input formnovalidate type="submit" class="btn btn-dark shadow" value="Modifier">
                    </div>
                {{form_end(form)}}
            </div>
        </div>
    </div>

{% endblock %}