{% extends 'themes/base_admin.html.twig' %}

{% block title %}Liste des Produits{% endblock %}

{% block description %}Liste des Produits{% endblock %}

{% block keywords %}Liste, produits, admin{% endblock %}

{% block main %}

    <h1 class="text-center my-3 display-5">Liste des Produits</h1>

    <div class="d-flex justify-content-end align-items-center my-3">
        <a href="{{path('admin_product_create')}}" class="btn btn-dark shadow"><i class="fa-solid fa-plus"></i> Nouveau Produit</a>
    </div>

    <div class="table-responsive">
        <table class="table table-hover text-center table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Slug</th>
                    <th>Image</th>
                    <th>Description</th>
                    <th>Price</th>
                    <th>Options</th>
                </tr>
            </thead>
            <tbody>
                {% for produit in produits %}
                    <tr>
                        <td>{{produit.id}}</td>
                        <td>{{produit.name}}</td>
                        <td>{{produit.slug}}</td>
                        <td>{{produit.image}}</td>
                        <td>{{produit.description}}</td>
                        <td>{{produit.price}}â‚¬</td>
                        <td class="d-flex justify-content-evenly">
                            <a href=""><i class="fa-solid fa-pen"></i></a>
                            <a href=""><i style="color:red" class="fa-solid fa-trash"></i></a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}
