{% extends 'themes/base_admin.html.twig' %}

{% block title %}Nouveau Produit{% endblock %}

{% block description %}Nouveau Produit{% endblock %}

{% block keywords %}Liste, produits, admin{% endblock %}

{% block jQuery %}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js" integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script>
        $(document).ready(function() {
            $('#admin_post_form_tags').select2();
        });
    </script>
{% endblock %}

{% block select2 %}
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
{% endblock %}

{% block main %}

    <h1 class="text-center my-3 display-5">Nouveau Produit</h1>

    <div class="container mt-5">
        <div class="row">
            <div class="col-md-6 mx-auto">
                {{form_start(form)}}
                    <div class="mb-3">
                        <label for="admin_product_form_name">Nom</label>
                        <div class="text-danger">{{form_errors(form.name)}}</div>
                        {{form_widget(form.name, {'attr':{'class':'form-control', 'autofocus':'autofocus'}})}}
                    </div>
                    <div class="mb-3">
                        <label for="admin_product_form_category">Catégorie</label>
                        <div class="text-danger">{{form_errors(form.category)}}</div>
                        {{form_widget(form.category, {'attr':{'class':'form-control'}})}}
                    </div>
                    <div class="mb-3">
                        <label for="admin_product_form_imageFile_file">Image</label>
                         <div class="text-danger">{{form_errors(form.imageFile)}}</div>
                        {{form_widget(form.imageFile, {'attr':{'class':'form-control'}})}}
                    </div>
                    <div class="mb-3">
                        <label for="admin_product_form_description">Description</label>
                        <div class="text-danger">{{form_errors(form.description)}}</div>
                        {{form_widget(form.description, {'attr':{'class':'form-control'}})}}
                    </div>
                    <div class="mb-3">
                        <label for="admin_product_form_price">Prix €</label>
                        <div class="text-danger">{{form_errors(form.price)}}</div>
                        {{form_widget(form.price, {'attr':{'class':'form-control'}})}}
                    </div>
                    <div class="mb-3 d-flex justify-content-center align-items-center">
                        <input formnovalidate type="submit" class="btn btn-dark shadow w-50" value="Créer">
                    </div>
                {{form_end(form)}}
            </div>
        </div>
    </div>

{# Wysiwyg editor #}
{% block ckEditor %}
    <script src="https://cdn.ckeditor.com/ckeditor5/41.4.2/classic/ckeditor.js"></script>
    <script>
        ClassicEditor
            .create( document.querySelector( '#editor' ) )
            .catch( error => {
                console.error( error );
            } );
    </script>
{% endblock %}

{% endblock %}
